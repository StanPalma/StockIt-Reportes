
@{
    ViewBag.Title = "Clientes";
    List<SelectListItem> categorias = (List<SelectListItem>)ViewBag.categorias;
    List<SelectListItem> estado = (List<SelectListItem>)ViewBag.estado;
}

<h2>Clientes</h2>

<div class="col-lg-6">
    <label>Categoria</label>
    @Html.DropDownList("categorias", categorias, "Seleccione categorias", new { @class = "form-control" })
    <br />
</div>

<div class="col-lg-6">
    <label>Estado</label>
    @Html.DropDownList("estado", estado, "Seleccione estado", new { @class = "form-control" })
    <br />
</div>

<table class="table table-bordered">
    <tr>
        <th>Nombre</th>
        <th>Teléfono</th>
        <th>Correo</th>
        <th>Sexo</th>
    </tr>
    <tr>
        <td><br /></td>
        <td><br /></td>
        <td><br /></td>
        <td><br /></td>
    </tr>
</table>

<a href="~/ReporteClientes/pdfClientes">
    <div class="btn-primary btn-sm media-right">
        <span class="glyphicon glyphicon-print">

        </span>
    </div>
</a>